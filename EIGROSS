// link of the erxercise: https://www.spoj.com/EIUPROGR/problems/EIGROSS/ //


import java.util.Scanner;

public class EIGROSS {

    static Scanner sc = new Scanner(System.in);

    public static void main(String[] agrs) {
        double sal=0;
        double before_tax=0;
        long people = sc.nextLong();
        while (people > 0) {
            double after_tax[] = new double[1];
            for (int i = 0; i < after_tax.length; i++) {
                after_tax[i] = sc.nextDouble();
                sal=(after_tax[i] / 0.9);
                before_tax=sal*0.1;
                System.out.println(before_tax);
            }
            people--;
        }
    }
}
